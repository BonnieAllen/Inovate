= simple_form_for(@staffer, html: { class: 'form-horizontal' }) do |f|
	= f.input :first, label: "First", input_html: { class: "form-control" }
	= f.input :last, label: "Last", input_html: { class: "form-control" }
	= f.input :email, label: "Email", input_html: { class: "form-control" }
	= f.input :phone, label: "Phone", input_html: { class: "form-control"}
	%br/
	= f.button :submit